<% include ../partials/header %>

<div class="container">
    <h1 class="text-center">Add New Campground</h1>
    <form class="form" action="/campgrounds" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="campground[name]" placeholder="Campground Name">  
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="campground[image]" placeholder="Image URL">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="campground[description]" placeholder="Description">
        </div>
        <button class="btn btn-primary">Submit!</button>
    </form>
</div>

<% include ../partials/footer %>